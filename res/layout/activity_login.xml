<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Login" >

    <ImageView
        android:id="@+id/imgFotoCancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/msg_fallo_img"
        android:src="@drawable/disoner" />
    
    <EditText
        android:id="@+id/txtLoginUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imgFotoCancion"
        android:layout_marginTop="80dp"
        android:background="@color/blanco"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/txt_login_correo"
        android:inputType="textEmailAddress"
        android:padding="7dp"
        android:textColor="@color/gris_dos" />

    <EditText
        android:id="@+id/txtLoginPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtLoginUsuario"
        android:layout_alignRight="@+id/txtLoginUsuario"
        android:layout_below="@+id/txtLoginUsuario"
        android:layout_marginTop="40dp"
        android:background="@color/blanco"
        android:ems="10"
        android:hint="@string/txt_login_password"
        android:inputType="textPassword"
        android:padding="7dp" >

    </EditText>

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLoginPwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_entrar"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/btn_entrar"
        android:textColor="@color/gris_dos"
        android:textStyle="bold" />

</RelativeLayout>